@model UsuarioModel
@{
    ViewData["Title"] = "Deletar Usuário";
}

<div class="text-center">
    <h3>Deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-danger" asp-controller="Usuario" asp-action="Deletar" asp-route-id="@Model.Id">Confirmar</a>
    <a class="btn btn-primary" asp-controller="Usuario" asp-action="Index">Cancelar</a>
</div>